<library path="diffdrive_webots_plugin">
  <class type="diffdrive_webots_plugin::DifferentialControl" base_class_type="webots_ros2_driver::PluginInterface">
    <description>subscribe to /cmd_vel and generate motor speed</description>
  </class>

  <class type="diffdrive_webots_plugin::WheelEncoder" base_class_type="webots_ros2_driver::PluginInterface">
    <description>publish /joint_states</description>
  </class>

  <class type="diffdrive_webots_plugin::IMU" base_class_type="webots_ros2_driver::PluginInterface">
    <description>publish /imu</description>
  </class>

  <class type="diffdrive_webots_plugin::DepthCamera" base_class_type="webots_ros2_driver::PluginInterface">
    <description>publish /depth_image</description>
  </class>

  <class type="diffdrive_webots_plugin::Camera" base_class_type="webots_ros2_driver::PluginInterface">
    <description>publish /image</description>
  </class>
</library>
